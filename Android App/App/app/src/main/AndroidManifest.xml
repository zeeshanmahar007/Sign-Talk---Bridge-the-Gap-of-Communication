<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.signtalk">

    <application
        android:allowBackup="true"
        android:icon="@drawable/signlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/signlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SignTalk">
        <activity
            android:name=".ModeSelectionAndNavDrawer.NumberActivity"
            android:exported="false" />
        <activity
            android:name=".ModeSelectionAndNavDrawer.ShowCategorySignActivity"
            android:exported="false" />
        <activity
            android:name=".ModeSelectionAndNavDrawer.AlphabetActivity"
            android:exported="false" />
        <activity
            android:name=".CommunicationMode.SignToTextMode"
            android:exported="false" />
        <activity
            android:name=".CommunicationMode.TextToSignMode"
            android:exported="false" />
        <activity
            android:name=".ModeSelectionAndNavDrawer.SignViewActivity"
            android:exported="false" />
        <activity
            android:name=".SplashMainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FacebookAuthActivity"
            android:exported="false" />
        <activity
            android:name=".Signup"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".ModeSelectionAndNavDrawer.ModeSelectionMainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"> <!-- true -->
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>